{
  "title": {
    "title": {
      "value": "{{ work.title }}"
    }
  },
  "journal-title": {
    "value": "{{ work.journal_title }}"
  },
  "type": "{{ work.type }}",
  "publication-date": {
    "year": {
      "value": "{{ work.publication_date.year }}"
    }{% if work.publication_date.month %},
    "month": {
      "value": "{{ '%02d' % work.publication_date.month }}"
    }{%if work.publication_date.day %},
    "day": {
      "value": "{{ '%02d' % work.publication_date.day }}"
    }{% endif %}{% endif %}
  },
  "external-ids": {
    "external-id": [
      {
        "external-id-type": "{{ work.external_id_type }}",
        "external-id-value": "{{ work.external_id  }}",

        "external-id-url": {
          "value": "{{ work.external_id_url }}"
        },
        "external-id-relationship": "self"
      }
    ]
  },
  "url": {
    "value": "{{ work.url }}"
  },
  "contributors": {
    "contributor": [
      {% for contributor in work.contributors %}
        {
          {% if contributor.orcid %}
          "contributor-orcid": {
            "uri": "{{ contributor.orcid_uri }}",
            "path": "{{ contributor.orcid }}",
            "host": "orcid.org"
          },
          {% endif %}
          "credit-name": {
            "value": "{{ contributor.credit_name }}"
          }{% if contributor.sequence %},
          "contributor-attributes": {
            "contributor-sequence": "{{ contributor.sequence }}"
          }{% endif %}
        }{{ ", " if not loop.last else "" }}
      {% endfor %}
    ]
  },
  "language-code": "en",
  "country": {
    "value": "US"
  }
}
