{
  "title": {
    "title": {
      "value": "{{ work.title }}"
    },
    "subtitle": {
      "value": "{{ work.subtitle }}"
    }
  },
  "journal-title": {
    "value": "{{ work.container }}"
  },
  "short-description": "{{ work.description }}",
  "type": "{{ work.work_type }}",
  "publication-date": {
    "year": {
      "value": "{{ work.pub_year }}"
    }{% if work.pub_month %},
    "month": {
      "value": "{{ '%02d' % work.pub_month }}"
    }{%if work.pub_day %},
    "day": {
      "value": "{{ '%02d' % work.pub_day }}"
    }{% endif %}{% endif %}
  },
  "external-ids": {
    "external-id": [
      {
        "external-id-type": "{{ work.external_id_type if work.external_id_type else 'source-work-id' }}",
        "external-id-value": "{{ work.external_id if work.external_id else work._work_id }}",

        "external-id-url": {
          "value": "{{ work.external_id_url }}"
        },
        "external-id-relationship": "self"
      }
    ]
  },
  "url": {
    "value": "{{ work.url }}"
  },
  "contributors": {
    "contributor": [
      {% for contributor in work.contributors %}
        {
          {% if contributor.orcid %}
          "contributor-orcid": {
            "uri": "{{ contributor.orcid_uri }}",
            "path": "{{ contributor.orcid }}",
            "host": "orcid.org"
          },
          {% endif %}
          "credit-name": {
            "value": "{{ contributor.name }}"
          }{% if contributor.sequence %},
          "contributor-attributes": {
            "contributor-sequence": "{{ contributor.sequence }}",
            "contributor-role": "{{ contributor.role }}"
          }{% endif %}
        }{{ ", " if not loop.last else "" }}
      {% endfor %}
    ]
  },
  "language-code": "en",
  "country": {
    "value": "US"
  }
}
